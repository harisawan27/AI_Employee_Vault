# WEBXES Tech — Cloud Environment Variables
# Copy to /opt/ai_employee_vault/.env and fill in values
# NEVER commit this file to Git

# Vault
VAULT_PATH=/opt/ai_employee_vault
WORK_ZONE=cloud

# Odoo ERP (running in Docker on this VM)
ODOO_URL=http://localhost:8069
ODOO_DB=odoo_fte
ODOO_USER=admin
ODOO_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Gmail API (token file synced via git, credentials NOT synced)
# On cloud, Gmail watcher uses token-based auth only (no browser OAuth flow)
GMAIL_CREDENTIALS_PATH=
GMAIL_TOKEN_PATH=/opt/ai_employee_vault/.credentials/token.json

# Safety — cloud drafts only, never sends directly
DRY_RUN=true

# Git sync
GIT_SYNC_INTERVAL=300
GIT_REMOTE=origin
GIT_BRANCH=main
